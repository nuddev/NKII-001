{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@page/*": ["src/page/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@images/*": ["src/assets/images/*"],
    }
  }
}
